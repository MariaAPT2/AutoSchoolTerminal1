<Page x:Class="AutoSchoolTerminal.Pages.LessonsChoicePages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoSchoolTerminal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1500"
      Title="LessonsChoicePages">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#85CFF7" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <WrapPanel HorizontalAlignment="Center"
                   VerticalAlignment="Center" 
                   ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <UniformGrid Columns="2">
                <Button x:Name="btnLessons" Content="Расписание лекций" Style="{StaticResource MainButtonStyle}" Margin="0 0 100 0" Click="btnLessons_Click"/>
                <Button x:Name="btnDrivingLessons" Content="Расписание практики" Style="{StaticResource MainButtonStyle}" Margin="100 0 0 0" Click="btnDrivingLessons_Click"/>
            </UniformGrid>
        </WrapPanel>
    </Grid>
</Page>
